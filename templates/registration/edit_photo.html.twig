	<script src="{{asset('js/custom.js')}}"></script>
	<script type="text/javascript">
		$(function() {

         $("#formulaire").show();
		$("#profil").hide();
        $("#securite").hide();
        $("#photo").hide();
				
		$("#id_profil").click(function(){
            console.log("bonjour");
        $("#formulaire").show();
		$("#profil").hide();
        $("#securite").hide();
        $("#photo").hide();
		});
        $("#id_photo").click(function(){
        $("#photo").show();
		$("#formulaire").hide();
        $("#securite").hide();
		});
		$("#id_securite").click(function(){
		$("#profil").hide();
        $("#photo").hide();
		});
        });
        function readURL(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function (e) {
                    $('#blah')
                        .attr('src', e.target.result);
                };
                reader.readAsDataURL(input.files[0]);
            }
        }
		</script>

